{
  "builds": [
    {
      "src": "app.py",
      "use": "@vercel/python",
      "config": {
        "maxLambdaSize": "15mb",
        "runtime": "python3.11"
      }
    },
    {
      "src": "templates/**",
      "use": "@vercel/static"
    }
  ],
  "routes": [
    {
      "src": "/static/(.*)",
      "dest": "/templates/static/$1"
    },
    {
      "src": "/(.*)",
      "dest": "app.py"
    }
  ],
  "env": {
    "PYTHON_VERSION": "3.11",
    "GRADIO_SERVER_PORT": "8080",
    "GRADIO_SERVER_NAME": "0.0.0.0"
  },
  "functions": {
    "app.py": {
      "maxDuration": 60,
      "memory": 3008
    }
  }
}
